{
  "submit_types": ["background", "serial", "parallel"],
  "default_submit_type": "serial",
  "background": {
    "INTERPRETER":  "#!/usr/bin/python3",
    "SCHOST": "local",
    "tasks": [
      "Background"
    ]
  },
  "serial": {
    "SCHOST": "hpc",
    "BATCH": {
       "ACCOUNT": "#SBATCH -A msdeode",
       "WALLTIME": "#SBATCH --time=00:12:00",
       "QOS": "#SBATCH --qos=nf",
       "NODES": "#SBATCH --nodes=1",
       "NTASKS": "#SBATCH --ntasks=8",
       "CPUS": "#SBATCH --cpus-per-task=4",
       "MEM": "#SBATCH --mem=24G",
       "EXPORT": "#SBATCH --export=ALL"


    }
  },
  "parallel": {
    "SCHOST": "hpc",
    "BATCH": {
       "ACCOUNT": "#SBATCH -A msdeode",
       "WALLTIME": "#SBATCH --time=00:10:00"
      },
    "tasks": [
    ]
  },
  "task_exceptions": {
    "Forecast": {
       "BATCH": {
          "WALLTIME": "#SBATCH --time=00:15:00"
       },
       "ENV": {
          "MODULE": "print('My beautiful module')",
	  "OMP_NUM_THREADS": "os.environ['OMP_NUM_THREADS'] = '8'"
       }
    }
  }
}

